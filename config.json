{
    "name":"r2",
    "plugins":[
        {
            "name":"translate",
            "description":"Translate all single english words.",
            "regex":"^[a-zA-Z-]+$",
            "type": "response"
        },
        {
            "name":"sayHello",
            "description":"say Hello!",
            "regex":"^(Hello|Hi)$",
            "type":"response",
            "response":"Hello!"
        },
        {
            "name":"googleDrive",
            "description":"save all file in googleDrive",
            "type":"file"
        },
        {
            "name":"tuling",
            "description":"Tuling bot",
            "type":"response",
            "regex":"^.*\\.$"
        }
    ]
}
